<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exercise.softeng.MenuActivity">

    <LinearLayout
        android:id="@+id/menu_layout_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="75dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_mngRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:onClick="START_MANAGE_RIDE"
            android:text="@string/text_MANAGE_RIDE" />

        <Button
            android:id="@+id/btn_searchRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="START_SEARCH_ACTIVITY"
            android:padding="5dp"
            android:text="@string/text_SEARCH_RIDE" />

        <Button
            android:id="@+id/btn_payRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="START_PAY_ACTIVITY"
            android:padding="5dp"
            android:text="@string/text_PAY_RIDE" />

        <Button
            android:id="@+id/btn_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/text_RATE" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
